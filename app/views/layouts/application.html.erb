<!DOCTYPE html>
<html>
<head>
  <title>loltuts</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <!-- navbar -->
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "loltuts", root_path, class: "navbar-brand" %>
      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li>
            <%= link_to posts_path do %>
              <%= icon('archive') %> All tutorials
            <% end %>
          </li>
          <% if can? :read, User %>
            <li>
              <%= link_to users_path do %>
                <%= icon('users') %> Users
              <% end %>
            </li>
          <% end %>
          <% if can? :create, Post %>
            <li>
              <%= link_to new_post_path do %>
                <%= icon('pencil') %> New tutorial
              <% end %>
            </li>
          <% end %>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <%= image_tag current_user.avatar.url, class: "profile-image" %>
                <%= current_user.email %>
                <span class="caret"></span>
                <ul class="dropdown-menu">
                  <li><%= link_to "Profile", user_path(current_user) %></li>
                  <li><%= link_to "Settings", edit_user_registration_path %></li>
                  <li role="separator" class="divider"></li>
                  <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
                </ul>
              </a>
            </li>
          <% else %>
            <li><%= link_to "Register", new_user_registration_path %></li>
            <li><%= link_to "Log in", new_user_session_path %></li>
          <% end %>
        </ul>
        <%= render "shared/search_form" %>
      </div>
    </div>
  </nav>

  <!-- page content -->
  <div class="container app-content">
    <% flash.each do |key, value| %>
      <div class="alert <%= get_flash_class(key) %>">
        <%= value %>
      </div>
    <% end %>

    <%= yield %>
  </div>

  <!-- footer -->
  <footer>
    <div class="container">
      <div class="row">
        <div class="col-md-4 col-sm-12 center-on-small">
          2016 - LOL Tutorials
        </div>
        <div class="col-md-8 col-sm-12 text-right center-on-small">
          <%= link_to "About", about_path, class: "link" %>
        </div>
      </div>
    </div>
  </footer>

</body>
</html>
